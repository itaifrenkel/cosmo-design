define install_service
    sequence
        get_availability_zones
        concurrent on: ${actual_availability_zones}, to_f: ${availability_zone}
            install_service service: ${lb_java_web_service}

define deploy_war_files
    sequence
        get_services service: ${lb_java_web_service}
        concurrent on: ${actual_services}, to_f: ${service}
            service exec: deploy_war_files